<!DOCTYPE html>
<html lang="en">
  <title>User</title>

  <head>
    <%- include ('partials/head.ejs') %>
  </head>

  <body>
    <header><%- include ('partials/header.ejs') %></header>
    <main class="user_main">
      <article>
        <section>
          <% if (isLoggedIn) { %>
          <h1>Hallo, <%= username %>!</h1>
          <% } else { %>
          <h1>Hallo, gebruiker!</h1>
          <% } %>

          <h2>Log uit</h2>
          <p>Klik hieronder om uit te loggen.</p>
          <% if (isLoggedIn) { %>
          <form action="/logout" method="post">
            <button class="button_whiteborder" type="submit">Log uit</button>
          </form>
          <% } %>
        </section>

        <section>
          <h2>Gebruikersnaam veranderen</h2>
          <form action="/user/update-username" method="POST">
            <input
              type="text"
              name="newUsername"
              placeholder="Nieuwe username"
              required
            />
            <button class="button_whiteborder" type="submit">Opslaan</button>
          </form>
        </section>

        <section>
          <h2>Account verwijderen</h2>
          <p>Klik hieronder om je account te verwijderen.</p>
          <form
            class="delete_form"
            action="/user/delete"
            method="post"
            onsubmit="return confirm('Weet je zeker dat je je account wilt verwijderen?');"
          >
            <button type="submit">Account verwijderen</button>
          </form>
        </section>
      </article>
    </main>

    <footer><%- include ('partials/footer.ejs') %></footer>
  </body>
  <%- include ('script.ejs') %>
</html>
